}

.phone-header a:hover {
    color: #2c5aa0;
}

.dm-third.phone-header {
    text-align: left;
}
.dm-third.address-header {
    text-align: center;
}
.dm-third.social-header {
    text-align: right;
}
div#regular-header.container-wide .dm-flex p {
    margin: 0;
}
/* Address Header */
.address-header p {
    margin: 0;
    font-size: 14px;
}

.address-header i {
    margin-right: 8px;
    color: #dc3545;
}

.address-header a {
    color: #333;
    text-decoration: none;
}

.address-header strong {
    font-weight: 700;
}

/* Social Header */
.social-icons {
    display: flex;
    justify-content: flex-end;
    gap: 10px;
}

.social-icons a {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 32px;
    height: 32px;
    border-radius: 50%;
    color: white;
    text-decoration: none;
    transition: transform 0.2s ease;
}

.social-icons a:hover {
    transform: scale(1.1);
}

.header-facebook {
    background: #3b5998;
}
.header-google {
    background: #dd4b39;
}
.header-twitter {
    background: #1da1f2;
}
.header-youtube {
    background: #ff0000;
}
.header-yelp {
    background: #af0606;
}
.header-pinterest-p {
    background: #bd081c;
}

/* Main Header */

div#header {
    background: white;
    padding: 10px 8px;
}

#header {
    position: relative;
    min-width: 100%;
    width: 100%;
    float: left;
    margin: 0;
    padding: 0;
    background: #222;
}

div#secondary-navigation {
    float: none;
    display: flex;
    align-items: center;
}

.secondary-navigation {
    display: block;
    float: right;
}

#secondary-navigation #logo a {
    font-weight: bold;
    font-size: 26px;
}
#secondary-navigation a {
    font-family: 'Roboto', sans-serif;
    font-weight: 500;
    font-size: 17px;
    color: #000000;
    text-transform: uppercase;
}
/* Logo */
html #header #logo {
    float: none !important;
    display: block !important;
}

.logo-wrap {
    margin: 0;
    float: none;
    overflow: visible;
    flex-shrink: 0;
}
/*  TODO: Figure out why there are two .logo-wrap(s) and how it works. 
My guess is for home page and other pages, or mobile*/
.logo-wrap {
    margin: 49px 0;
    overflow: hidden;
    float: left;
}

#logo {
    margin: 0;
    font-size: 0;
}

#logo img {
    height: 60px;
    width: auto;
}

/* Right Side Header */
.right-side-header {
    flex-grow: 1;
    text-align: right;
}

.right-side-header > div:first-child {
    margin-bottom: 15px;
}

.right-side-header p {
    display: inline-block;
    margin: 0 20px 0 0;
    font-size: 16px;
    font-weight: 600;
}

.right-side-header a {
    color: #333;
    text-decoration: none;
}

/* Buttons */
.btn {
    background-color: var(--red-accent);
    display: inline-block;
    padding: 10px 20px;
    margin: 0 5px;
    color: white !important;
    text-decoration: none;
    border-radius: 5px;
    font-weight: 600;
    transition: background 0.3s ease;
}

.btn:hover {
    background: #1e3f73;
    color: white !important;
}

/* Navigation */
.navigation {
    margin-top: 10px;
}

.menu {
    display: flex;
    list-style: none;
    margin: 0;
    padding: 0;
    justify-content: flex-end;
}

.menu-item {
    font-family: 'Roboto', sans-serif;
    position: relative;
    margin: 0 5px;
}

.menu-item > a {
    display: block;
    padding: 12px 15px;
    color: #333;
    font-family: 'Roboto', sans-serif;
    text-decoration: none;
    font-weight: 600;
    transition: color 0.3s ease;
}

.menu-item:hover > a,
.menu-item.current > a {
    color: #2c5aa0;
}

/* Dropdown Menus */
.sub-menu {
    position: absolute;
    top: 100%;
    left: 0;
    background: white;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    border: 1px solid #e9ecef;
    min-width: 200px;
    list-style: none;
    margin: 0;
    padding: 0;
    z-index: 1000;
    opacity: 0;
    visibility: hidden;
    transform: translateY(-10px);
    transition: all 0.3s ease;
}

.menu-item:hover .sub-menu {
    font-family: 'Roboto', sans-serif;
    opacity: 1;
    visibility: visible;
    transform: translateY(0);
}

/* Long Services Menu */
.wda-long-menu {
    min-width: 250px;
    max-height: 400px;
    overflow-y: auto;
}

.sub-menu .menu-item {
    font-family: 'Roboto', sans-serif;
    margin: 0;
    border-bottom: 1px solid #f8f9fa;
}

.sub-menu .menu-item:last-child {
    border-bottom: none;
}

.sub-menu a {
    padding: 10px 15px;
    font-weight: 500;
    font-size: 14px;
}

.sub-menu a:hover {
    background: #f8f9fa;
    color: #2c5aa0;
}

/* Toggle Caret */
.toggle-caret {
    position: absolute;
    right: 5px;
    top: 50%;
    transform: translateY(-50%);
    color: #666;
    transition: transform 0.3s ease;
}

.menu-item:hover .toggle-caret {
    transform: translateY(-50%) rotate(45deg);
}

/* Mobile Menu Toggle */
.toggle-mobile-menu {
    display: none;
    background: none;
    border: none;
    font-size: 24px;
    color: #333;
    cursor: pointer;
}

#mobile-menu-overlay {
    display: none;
}

/* Responsive Design */
@media (max-width: 1024px) {
    .dm-flex {
        flex-direction: column;
        gap: 10px;
    }

    .dm-third {
        text-align: center;
    }

    .secondary-navigation {
        flex-direction: column;
        gap: 15px;
    }

    .right-side-header {
        text-align: center;
    }

    .menu {
        justify-content: center;
    }
}

@media (max-width: 768px) {
    .header-spacer {
        height: auto !important;
        min-height: 120px;
    }

    .main-header {
        position: relative;
    }

    .toggle-mobile-menu {
        display: block;
    }

    .menu {
        display: none;
        flex-direction: column;
        position: absolute;
        top: 100%;
        left: 0;
        right: 0;
        background: white;
        border: 1px solid #e9ecef;
        border-top: none;
    }

    .menu.active {
        display: flex;
    }

    .menu-item {
        font-family: 'Roboto', sans-serif;
        margin: 0;
        border-bottom: 1px solid #f8f9fa;
    }

    .sub-menu {
        position: static;
        box-shadow: none;
        border: none;
        opacity: 1;
        visibility: visible;
        transform: none;
        display: none;
        background: #f8f9fa;
    }

    .menu-item.active .sub-menu {
        display: block;
    }

    .social-icons {
        justify-content: center;
        margin-top: 10px;
    }
}

/* Current Page Highlighting */
.current-menu-item > a,
.current_page_item > a {
    color: var(--secondary-green);
}

/* Separator for Priority Services */
.menu-item:nth-child(5)::after {
    content: '';
    position: absolute;
    bottom: -5px;
    left: 50%;
    transform: translateX(-50%);
    width: 80%;
    height: 1px;
    background: #e9ecef;
}

/* Focus States for Accessibility */
.menu-item a:focus,
.btn:focus {
    outline: 2px solid #2c5aa0;
    outline-offset: 2px;
}

/* Print Styles */
@media print {
    .main-header {
        position: static;
        box-shadow: none;
    }

    .header-spacer {
        display: none;
    }

    .top-header,
    .social-icons,
    .btn {
        display: none;
    }
}

